{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "outDir": "dist",
    "module": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noImplicitAny": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "jsx": "react",
    "plugins": [

    ]
  },
  "compileOnSave": false,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/client/dist",
    "src/client/node_modules"
  ]
}
