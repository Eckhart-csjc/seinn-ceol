[
  {
    "name": "composer",
    "columns": [
      {
        "header": "#",
        "extractor": "unfilteredIndex",
        "width": "3%",
        "justification": "right"
      },
      {
        "header": "Composer",
        "extractor": "(composer join ' & ') or composerDetail.name",
        "width": "14%"
      },
      {
        "header": "Born",
        "extractor": "shortDate composerDetail.born",
        "width": "5.6%",
        "justification": "center"
      },
      {
        "header": "Died",
        "extractor": "shortDate composerDetail.died",
        "width": "5.6%",
        "justification": "center"
      },
      {
        "header": "Title",
        "extractor": "title",
        "width": "25%"
      },
      {
        "header": "Artist",
        "extractor": "artists",
        "width": "10%"
      },
      {
        "header": "Album",
        "extractor": "album",
        "width": "18%"
      },
      {
        "header": "Disk",
        "extractor": "(disk || '') + '/' + (nDisks || '')",
        "width": "3%",
        "justification": "center"
      },
      {
        "header": "Track",
        "extractor": "(track || '') + '/' + (nTracks || '')",
        "width": "4%",
        "justification": "center"
      },
      {
        "header": "Time",
        "extractor": "shortDur duration",
        "width": "3%",
        "justification": "right"
      },
      {
        "header": "Plays",
        "extractor": "plays || '0'",
        "width": "3%",
        "justification": "right"
      },
      {
        "header": "Last played",
        "extractor": "shortTime lastPlayed",
        "width": "6%",
        "justification": "right"
      }
    ],
    "separator": "│",
    "hdrTheming": {
      "chalk": [
        "italic",
        "underline",
        "blueBright"
      ]
    },
    "separatorTheming": {
      "chalk": [
        "gray"
      ]
    },
    "hdrSeparatorTheming": {
      "chalk": [
        "gray"
      ]
    }
  },
  {
    "name": "detail",
    "columns": [
      {
        "extractor": "'Title: ' + title"
      },
      {
        "extractor": "'Composer: ' + (composer join ' & ') + (((composer join ' & ') != composerDetail.name) && (' (' + composerDetail.name + ')') || '')"
      },
      {
        "extractor": "'Born: ' + composerDetail.born"
      },
      {
        "extractor": "'Died: ' + composerDetail.died"
      },
      {
        "extractor": "composerDetail.tags && 'Tags: ' + (tags join ' ')"
      },
      {
        "extractor": "compositionDate && ('Composition Date: ' + compositionDate)"
      },
      {
        "extractor": "opus && ('Opus ' + opus)"
      },
      {
        "extractor": "categories"
      },
      {
        "extractor": "no && ('No. ' + no)"
      },
      {
        "extractor": "movement && ('Movement ' + movement + (subMovement || ''))"
      },
      {
        "extractor": "'Artist: ' + (artists join ' & ')"
      },
      {
        "extractor": "'Album: ' + album"
      },
      {
        "extractor": "copyright"
      },
      {
        "extractor": "'Genre: ' + (genre join ', ')"
      },
      {
        "extractor": "date && (shortDate date)"
      },
      {
        "extractor": "(disk || nDisks) && ('Disk ' + disk + ' of ' + nDisks)"
      },
      {
        "extractor": "(track || nTracks) && ('Track ' + track + ' of ' + nTracks)"
      },
      {
        "extractor": "'Duration: ' + (shortDur duration)"
      },
      {
        "extractor": "'Plays: ' + (plays || '0')"
      },
      {
        "extractor": "lastPlayed && ('Last played: ' + (shortTime lastPlayed))"
      },
      {
        "extractor": "tags && ('Tags: ' + (tags join ' '))"
      },
      {
        "extractor": "'File: ' + trackPath"
      }
    ],
    "separator": " │ ",
    "separatorTheming": {
      "chalk": [
        "gray"
      ]
    },
    "theming": {
      "chalk": [
        "rgb(100,255,220)"
      ]
    },
    "prefix": " → "
  }
]
